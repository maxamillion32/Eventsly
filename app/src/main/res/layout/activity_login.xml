<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="@string/btnCancel"
        android:id="@+id/btnCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/eventsly_buttons"
        android:textColor="#fffdfdfe"
        android:textSize="30sp"
        android:singleLine="false"
        android:textStyle="italic"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="@string/btnNewUsers"
        android:id="@+id/btnNewUsers"
        android:layout_above="@+id/btnCancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffdfdfe"
        android:textSize="30sp"
        android:singleLine="false"
        android:textStyle="italic"
        android:clickable="true"
        android:background="@drawable/eventsly_buttons" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="@string/btnSignIn"
        android:id="@+id/btnSignIn"
        android:layout_above="@+id/btnNewUsers"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/eventsly_buttons"
        android:clickable="true"
        android:textColor="#fffdfdfe"
        android:textSize="30sp"
        android:singleLine="false"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:layout_below="@+id/labelEmail"
        android:layout_centerHorizontal="true"
        android:editable="true"
        android:textColor="#fffdfdfe"
        android:textIsSelectable="true"
        android:autoText="true"
        android:background="@drawable/eventsly_buttons" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_above="@+id/btnSignIn"
        android:layout_alignStart="@+id/editTextEmail"
        android:layout_marginBottom="78dp"
        android:editable="true"
        android:textColor="#fffdfdfe"
        android:textIsSelectable="true"
        android:password="true"
        android:background="@drawable/eventsly_buttons" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelEmail"
        android:id="@+id/labelEmail"
        android:textSize="30sp"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextEmail"
        android:textColor="#fffdfdfe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelPassword"
        android:id="@+id/labelPassword"
        android:textColor="#fffdfdfe"
        android:textSize="30sp"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword" />


</RelativeLayout>
