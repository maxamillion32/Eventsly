<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.william.eventsly">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSeeCredentials"
        android:id="@+id/btnSeeCredentials"
        android:background="@drawable/eventsly_buttons"
        android:clickable="true"
        android:onClick="onSeeCredentialsClick"
        android:textColor="#fffdfdfe"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_marginBottom="98dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>